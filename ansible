- name: Start instances
  hosts: localhost
  gather_facts: false 
  connection: local
  tasks:
    - name: start a particular instance by its ID
      amazon.aws.ec2_instance:
        state: running
        instance_ids:
          - i-073fc7e894a5fe86c
    - name: Sleep for 300 seconds and continue
      ansible.builtin.wait_for:
        timeout: 300
      delegate_to: localhost
